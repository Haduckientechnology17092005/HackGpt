# HackGPT Environment Configuration
# Copy this file to .env and modify as needed

# OpenAI API Key (optional - leave empty to use local AI)
OPENAI_API_KEY=

# Web Dashboard Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false

# Default Target Configuration (for testing)
DEFAULT_TARGET=testphp.vulnweb.com
DEFAULT_SCOPE=Test environment
DEFAULT_AUTH_KEY=TEST-ENVIRONMENT

# AI Configuration
AI_MODEL=gpt-3.5-turbo
LOCAL_MODEL=llama2:7b
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Security Settings
REQUIRE_CONFIRMATION=true
MAX_EXPLOIT_ATTEMPTS=3
LOG_LEVEL=INFO
